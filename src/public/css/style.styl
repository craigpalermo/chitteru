@import 'nib'
@import url("http://fonts.googleapis.com/css?family=Roboto:400,900,300")
@import url("http://fonts.googleapis.com/css?family=Roboto+Slab:400,700")


// Colors ------------------------------------------------------------------
light-brown = rgb(86,41,26)
dark-brown = rgb(255,214,149)

// General ------------------------------------------------------------------
html
body
    height 100%
    margin 0
    padding 0
    font-family "Roboto", sans-serif

a
    color light-brown
a:hover
    color dark-brown

// Title  ------------------------------------------------------------------
.title h1
    font-family "Roboto Slab", serif
    margin 0
    font-size 2.5em
    font-weight 700

// Nav bar ------------------------------------------------------------------
.nav-bar
    height 95px
    width 100%
    flex-flow row nowrap
    align-items center
    justify-content center

.logo
.logo img
    height 80%
    width auto
    margin-left 15px
    margin-right auto

.nav-item
    margin-left 40px
    margin-right 40px
    font-size 1.6em
    text-align center
    display block
    
.nav-button
    height 80%
.nav-button:hover
    cursor pointer
    cursor hand

// Flex ---------------------------------------------------------------------
.flex
    display flex
.flex-center
    align-items center
    justify-content center
.flex-row-center
    flex-flow row wrap
    align-items center
    justify-content center
